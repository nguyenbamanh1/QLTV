<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:text="Mã tài liệu:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtmatl"
        android:layout_width="250dp"
        android:layout_height="28dp"
        android:layout_marginTop="18dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txttentl"
        android:layout_width="250dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/txtmatl" />

    <TextView
        android:id="@+id/txttheloai"
        android:layout_width="250dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/txttentl" />

    <TextView
        android:id="@+id/txtsoluong"
        android:layout_width="250dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textView60"
        app:layout_constraintTop_toBottomOf="@+id/txttheloai" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:text="Tên tài liệu:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:text="Thể loại:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView60"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:text="Số lượng:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />
</androidx.constraintlayout.widget.ConstraintLayout>